@model Dropdowns.Models.UserProfileModel
@{
    ViewBag.Title = String.Format("Welcome, {0} {1}", Model.FirstName, Model.LastName);
}

<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        
        <h2>Welcome, @Model.FirstName</h2>

        <div class="panel panel-default">
            <div class="panel-body">              

                <p>Your profile details</p>

                <dl>
                    <dt>Your name</dt>
                    <dd>@Model.FirstName @Model.LastName</dd>

                    <dt>Your state</dt>
                    <dd>@Model.Industry</dd>
                </dl>
            </div>
            
            <p><a href="@Url.Action("UserProfile")">Edit profile</a></p>

        </div>
    </div>
</div>

